- var hat_colors = [
-  'red',
-  'orange',
-  'yellow',
-  'green',
-  'blue',
-  'indigo',
-  'violet'
- ]

.modal-content
  .modal-content-box
    form
      h2 Customize
      input#player_name(name="name" type="text" placeholder="What's your name?")
      .grid.spaced.align-middle: .grid-items
        .col
          .field.sub-colorPicker
            .grid.align-middle.spaced: .grid-items
              .row
                .col
                  .field-label Hat:
                .col
                  .field-input
                    .colorPicker
                      each color in hat_colors
                        - var pickerId = "avater-hat"
                        input(type='radio' name=pickerId value=pickerId + "-" + color id=pickerId + "-" + color)
                        label(for=pickerId + "-" + color, class=color)
              .row
                .col
                  .field-label Hair:
                .col
                  .field-input
                    .colorPicker
                      each color in hat_colors
                        - var pickerId = "avater-hair"
                        input(type='radio' name=pickerId value=pickerId + "-" + color id=pickerId + "-" + color)
                        label(for=pickerId + "-" + color, class=color)
              .row
                .col
                  .field-label Skin:
                .col
                  .field-input
                    .colorPicker
                      each color in hat_colors
                        - var pickerId = "avater-skin"
                        input(type='radio' name=pickerId value=pickerId + "-" + color id=pickerId + "-" + color)
                        label(for=pickerId + "-" + color, class=color)
              .row
                .col
                  .field-label Coat:
                .col
                  .field-input
                    .colorPicker
                      each color in hat_colors
                        - var pickerId = "avater-coat"
                        input(type='radio' name=pickerId value=pickerId + "-" + color id=pickerId + "-" + color)
                        label(for=pickerId + "-" + color, class=color)
              .row
                .col
                  .field-label Pants:
                .col
                  .field-input
                    .colorPicker
                      each color in hat_colors
                        - var pickerId = "avatar-pants"
                        input(type='radio' name=pickerId value=pickerId + "-" + color id=pickerId + "-" + color)
                        label(for=pickerId + "-" + color, class=color)
        .col
          .avatar(data-pos="7" style='font-size: 1rem; position: relative; font-size: 1.15em').v-space-none
            .player-name= name
            .avatar-wrap
              .body.v-space-none
                .hat
                .head
                .hair
                .left.eye
                .right.eye
                .mouth
                .torso
                .left.leg
                .right.leg
                .right.arm
                .left.arm
      button.sub-width-full Join the party!