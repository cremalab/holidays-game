- var hat_colors = [
-  'red',
-  'orange',
-  'yellow',
-  'green',
-  'blue',
-  'indigo',
-  'violet'
- ]

.modal-content
  .modal-content-box
    form
      h2 Customize
      input#player_name(name="name" type="text" placeholder="What's your name?")
      .grid.spaced.align-middle: .grid-items
        .col
          .field.sub-colorPicker
            .grid.align-middle.spaced: .grid-items
              .row
                .col
                  .field-label Hat:
                .col
                  .field-input
                    .colorPicker
                      each color in hat_colors
                        - var pickerId = "avatar-hat"
                        input(type='radio' name=pickerId value=pickerId + "-" + color id=pickerId + "-" + color)
                        label(for=pickerId + "-" + color, class=color)
              .row
                .col
                  .field-label Hair:
                .col
                  .field-input
                    .colorPicker
                      each color in hat_colors
                        - var pickerId = "avatar-hair"
                        input(type='radio' name=pickerId value=pickerId + "-" + color id=pickerId + "-" + color)
                        label(for=pickerId + "-" + color, class=color)
              .row
                .col
