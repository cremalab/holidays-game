@import "avatar/_config"
@import "avatar/_torso"
@import "avatar/_head"
@import "avatar/_legs"
@import "avatar/_mouth"
@import "avatar/_eyes"
@import "avatar/_arms"
//@import "person/_hair"

@keyframes walking-person
  0%
    top 0
  100%
    top -.03em

.avatar
  position absolute
  left 0
  top 0
  z-index 2
  font-size 2em
  text-align center
  display inline-block
  transition-property top
  animation-duration .6s
  width 60px
  height 100px
  &.moving
    animation-name walking-person
    animation-iteration-count infinite

.chat-dialog
  z-index 20
  position relative
  width auto

.speech-bubble
  position: absolute
  width: auto
  max-width 30em
  min-width 400%
  height: auto
  padding: .4em
  background: #fff
  -webkit-border-radius: 5px
  -moz-border-radius: 5px
  border-radius: 5px
  z-index 20
  top -90%
  left -130%

  input
    border none
    outline none
    width 100%
    height 100%
    padding 0

.speech-bubble:after
  content: ""
  position: absolute
  bottom: -15px
  left: 40%
  border-style: solid
  border-width: 15px 15px 0
  border-color: #fff transparent
  display: block
  width: 0
  z-index: 1