@import "avatar/_torso"
@import "avatar/_head"
@import "avatar/_legs"
@import "avatar/_mouth"
@import "avatar/_eyes"
@import "avatar/_arms"

// Transitions for customization form avatar
.avatar-holder 
  padding 2em
  *
    transition all 0.2s ease-in-out

.avatar
  @extend .nest-reset
  backface-visibility hidden
  position absolute
  left 0
  top 0
  z-index 2
  display inline-block
  text-align center
  transition transform 0.15s linear
  font-size 1em
  
  .body
    transition font-size 1s
    font-size 1em
  .power-up &
    .body
      font-size 2em
    .player-name
      top 3.8em
    .speech-bubble
      bottom 8em
    &:after
      top 3em
  
  &.active
    transition none
    animation-duration 0

  .player-name
    position absolute
    z-index 10
    text-align center
    white-space nowrap
    top 2.5em
    left 50%
    transform translateX(-50%)
    font-size 90%

.chat-dialog
  z-index 20
  position relative
  width auto
  min-width 10em

.speech-bubble
  position: absolute
  width: auto
  max-width 30em
  min-width 10em
  height: auto
  padding: .4em
  background: #fff
  border-radius 5px
  z-index 20
  bottom 4.5em
  left 50%
  transform translateX(-50%)

  input
    border none
    outline none
    width 100%
    height 100%
    padding 0
    text-align center
    
  .close
    background #e3e3e3
    right -0.875em
    top -0.875em
    

.speech-bubble:after
  content: ""
  position: absolute
  top: 100%
  left: 50%
  transform translateX(-50%)
  border-style: solid
  border-width: 8px 8px 0
  border-color: #fff transparent
  display: block
  width: 0
  z-index: 1
    