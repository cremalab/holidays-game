@import "avatar/_torso"
@import "avatar/_head"
@import "avatar/_legs"
@import "avatar/_mouth"
@import "avatar/_eyes"
@import "avatar/_arms"

// Transitions for customization form avatar
.avatar-holder *
  transition all 0.2s ease-in-out

.avatar
  backface-visibility hidden
  position absolute
  left 0
  top 0
  z-index 2
  display inline-block
  text-align center
  transition transform 0.15s linear
  
  &.active
    transition none
    animation-duration 0

  .player-name
    position absolute
    z-index 10
    width 100%
    text-align center
    bottom -2.5em
    left -0.7em
    text-shadow rgba(255,255,255,1) 0 .1em .4em
    font-size 120%

.chat-dialog
  z-index 20
  position relative
  width auto
  min-width 10em

.speech-bubble
  position: absolute
  width: auto
  max-width 30em
  min-width 10em
  height: auto
  padding: .4em
  background: #fff
  -webkit-border-radius: 5px
  -moz-border-radius: 5px
  border-radius: 5px
  z-index 20
  top -90%
  left -50%

  input
    border none
    outline none
    width 100%
    height 100%
    padding 0

.speech-bubble:after
  content: ""
  position: absolute
  bottom: -15px
  left: 40%
  border-style: solid
  border-width: 15px 15px 0
  border-color: #fff transparent
  display: block
  width: 0
  z-index: 1
  
.speech-bubble .close
  background #ddd
  color #666
  border-radius 2em
  padding 0 0.25em 0.25em .25em
  position absolute
  top -.5em
  right -.5em
  text-decoration none
  line-height 1em
  vertical-align top
  text-shadow #fff 0 1px 0
  border .08em solid #fff
