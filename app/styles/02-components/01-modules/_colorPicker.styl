.colorPicker
  font-size 0.875em
  text-align center
  display inline-table
  width 100%
  background white
  padding 2px
  vertical-align middle
  white-space nowrap
  border-spacing 0
  border-collapse collapse
  background white
  position relative
  box-shadow 0 0 1px rgba(black, 0.25)
  border-radius 0.25em

  label
    @extend .pad-r-4, .pad-l-4
    height 2em
    user-select none
    -webkit-tap-highlight-color transparent
    transition all 0.2s ease-in-out
    display table-cell
    cursor pointer
    vertical-align middle
    text-transform capitalize
    letter-spacing -0.6em
    color transparent
    opacity 0.25
    width 1%
    
    &:first-of-type
      border-radius 0.25em 0 0 0.25em
    &:last-of-type
      border-radius 0 0.25em 0.25em 0
    
    &:hover
      // opacity 1
      color initial
      letter-spacing normal
      
  input
    display none
    &:checked
      & + label
        width 90%
        opacity 1
        color initial
        letter-spacing normal
  