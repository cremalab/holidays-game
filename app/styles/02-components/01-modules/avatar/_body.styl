
@keyframes walking-person
  0%
    top 0
  100%
    top -.2em

@keyframes walking-person-shadow
  0%
    transform scale(1)
  100%
    transform scale(0.9)

.avatar-wrap
  position relative    
  transition transform .2s linear
  animation-duration .2s
  width 0.5em
  height 0.5em
  
.body
  position absolute
  top -3.75em
  left -1.75em

.avatar[data-pos="5"] .body,
.avatar[data-pos="6"] .body,
.avatar[data-pos="7"] .body
  transform scaleX(-1)

.avatar
  &:after
    content ''
    display block
    width 3em
    height .4em
    border-radius 50%
    background rgba(black, 0.05)
    position absolute
    top 1.325em
    left -1em
    margin-left -.3em
    transition transform .2s linear
    animation-duration .2s
    transform-origin center
    z-index -1
  
.avatar.moving 
  &:after, .avatar-wrap
    animation-iteration-count infinite
    animation-name walking-person-shadow
  
  .avatar-wrap
    animation-name walking-person
