
.eye
  width .3em
  height .5em
  border-radius 50%
  position absolute
  z-index 6
  top 2.6em
  background transparent //eye-color
  box-shadow 0 -0.2em 0em rgba(0,0,0,0.1), inset .1em .2em 0 #555
.left.eye
  right 1.2em
  [data-pos="1"] &,
  [data-pos="7"] &
    right .5em
    top 2.3em
  [data-pos="2"] &,
  [data-pos="6"] &
    right .8em
    top 2.3em
    z-index 2
  [data-pos="3"] &,
  [data-pos="5"] &
    right 1.2em
    top 2.3em
  [data-pos="3"] &,
  [data-pos="5"] &,
  [data-pos="4"] &
    right 2em
.right.eye
  left 1.2em
  [data-pos="1"] &,
  [data-pos="7"] &
    left 2em
  [data-pos="2"] &,
  [data-pos="6"] &
    left 2.8em
  [data-pos="3"] &,
  [data-pos="5"] &
    left 2.8em
  [data-pos="3"] &,
  [data-pos="5"] &,
  [data-pos="4"] &
    z-index 2
