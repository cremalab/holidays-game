  [data-gender="female"] &
    &:before, &:after
      content: '';
      display: block;
      position: absolute;
      top: 2.5em;
      width: 1em;
      height: 1em;
      border-radius: 50%;
      background: transparent;
      z-index: 3;
    &:before
      left: -.8em;
      transform: rotate(20deg);
      box-shadow: .5em .1em 0 hair-color;
    &:after
      right -.8em
      transform: rotate(-20deg);
      box-shadow: -.5em .1em 0 hair-color;
  
  [data-pos="1"][data-gender="female"] &
    &:before
      left -.4em
      top 2.3em
      z-index 5
    &:after
      right -.6em
      top 2.1em

  [data-pos="2"][data-gender="female"] &
    &:before
      left: 0.2em;
      z-index: 10;
      top: 1.4em;
      transform: rotate(70deg);
      height: 1.6em;
      box-shadow: 0.5em 0.1em 0 #300;

  [data-pos="2"][data-gender="female"] &
  [data-pos="3"][data-gender="female"] &
    &:after
      display none


  [data-pos="4"][data-gender="female"] &
    &:before, &:after
      z-index 7

  [data-pos="7"][data-gender="female"] &
    &:after
      z-index 7
      right -.4em
      top 2.3em
    &:before
      left -.6em
      top 2.1em