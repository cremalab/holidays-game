.modal
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  overflow auto
  overflow-x hidden
  -webkit-overflow-scrolling touch
  z-index 10000
  background rgba(black, 0.25)
  transform translate3d(0,0,0)

.modal-wrap
  width 100%
  height 100%
  display table
  text-align center
  
.modal-content
  @extend .pad-5
  display table-cell
  vertical-align middle
  text-align center
  
  .field-label 
    @media max-medium
      text-align left

.modal-content-box
  @extend .pad-2, .nest-2
  @extend $rounded
  display inline-block
  background white
  position relative
  width 100%
  max-width 30em
  box-shadow 0 0.15em 0.15em 0.25em rgba(black, 0.05)
  
  .close
    top 0.5em
    right 0.5em
    font-size 1.5em
    
  .modal.sub-intro &
    max-width 40em
  
.avatar-holder
  .avatar
    position relative
  