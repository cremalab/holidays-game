.whiteboard
  @extend .nest-reset
  position relative
  text-align center
  
  canvas
    border 4px solid lighten(#999, 30)
    border-radius 0.25em
    display block
  
  &.mini 
    position fixed
    top: 835px
    left: 1620px
    z-index: 835
    transform skewX(-12deg)
    canvas
      transform: rotateX(54deg)
      width: 193px
      height: 100px
      background: white
    
.whiteboard-markers
  display inline-table
  width 50%
  height 1.75em
  background lighten(#999, 30)
  border-bottom 4px solid lighten(#999, 25)
  box-shadow 0 4px 2px 3px rgba(#999, 0.075)
