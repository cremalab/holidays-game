.whiteboard
  @extend .nest-reset
  position relative
  text-align center
  line-height 0
  
  canvas
    border 4px solid lighten(#999, 30)
    border-radius 0.25em
    display block
    background white
  
  &.mini 
    position fixed
    top 824px
    left 1620px
    z-index 835
    transform skewX(-10deg) scale(0.7)
    
.whiteboard-markers
  display inline-table
  width 50%
  height 1.75em
  background lighten(#999, 30)
  border-bottom 4px solid lighten(#999, 25)
  box-shadow 0 4px 2px 3px rgba(#999, 0.075)
  .mini &
    height 0.75em
